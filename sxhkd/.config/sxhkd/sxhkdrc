# Basic binds
super + Return
  $TERMINAL
super + d
  j4-dmenu-desktop
super + shift + d
  (cd ~/desk && ls -1 --color=never | dmenu -l 20 -fn Monospace-16 | xargs -d '\n' xdg-open)  
super + control + d
  dmenu_run
super + p
  passmenu
super + Print
  flameshot gui -d 2000 -p ~/pics/screenshots
super + grave
  dmenuunicode
super + shift + n
  sudo systemctl restart NetworkManager

# Open some programs (super + x) chain
super + x ; p
  qtpass
super + x ; f
  $FILE
super + x ; shift + f
  $TERMINAL -e mc
super + x ; e
  emacsclient -c
super + x ; m
  $TERMINAL -e ncmpcpp
super + x ; a
  $TERMINAL -e pulsemixer
super + x ; c
  calibre
super + x ; shift + c
  camtoggle
super + x ; b
  $BROWSER
super + x ; shift + b
  firefox -P "Zapier"
super + x ; control + b
  qutebrowser
super + x ; shift + control + b
  $TERMINAL -e w3m duckduckgo.com
super + x ; n
  $TERMINAL -e nmtui
super + x ; t
  $TERMINAL -e tremc
super + x ; g
  gnucash
super + x ; shift + g
  gimp
super + x ; o
  libreoffice
super + x ; s
  slack
super + x ; shift + s
  signal-desktop

# Audio, brightness, docking
XF86AudioMute
  pactl set-sink-mute 0 toggle
XF86AudioLowerVolume
  pactl set-sink-volume 0 -5% ; pkill -RTMIN+4 dwmblocks
control+XF86AudioLowerVolume
  pactl set-sink-volume 0 -1% ; pkill -RTMIN+4 dwmblocks
XF86AudioRaiseVolume
  pactl set-sink-volume 0 +5% ; pkill -RTMIN+4 dwmblocks
control+XF86AudioRaiseVolume
  pactl set-sink-volume 0 +1% ; pkill -RTMIN+4 dwmblocks
XF86MonBrightnessDown
  xbacklight -dec 10
XF86MonBrightnessUp
  xbacklight -inc 10
super + x ; bracketright
  ~/.config/screenlayout/docked.sh
super + x ; bracketleft
  ~/.config/screenlayout/default.sh
super + x ; backslash
  ~/.config/screenlayout/external.sh
  
# for X230
XF86TouchpadToggle
  toggletouch230

# for X1
XF86Display
  toggletouchpad