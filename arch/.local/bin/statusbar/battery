#!/bin/sh

capacity=$(cat /sys/class/power_supply/BAT0/capacity 2>/dev/null)
status=$(sed "s/Discharging/ðŸ”‹/;s/Not charging/ðŸ›‘/;s/Charging/ðŸ”Œ/;s/Unknown/â™»/;s/Full/âš¡/" /sys/class/power_supply/BAT0/status 2>/dev/null)

if [[ $status == "" ]]
