# directory shortcuts
alias gf='cd ~/docs/finances'
alias gd='cd ~/docs'
alias gD='cd ~/Dropbox'
alias gm='cd ~/mus'
alias gp='cd ~/pics'
alias gv='cd ~/vids'
alias gr='cd ~/repos'

# homedir cleanup
alias dosbox='dosbox -conf "$XDG_CONFIG_HOME"/dosbox/dosbox.conf'
alias tmux='tmux -f "$XDG_CONFIG_HOME"/tmux/tmux.conf'
alias startx='startx "$XDG_CONFIG_HOME"/X11/xinitrc'

# ledger
# Ledger with all transactions
alias l='ledger -f ~/docs/finances/ledger/my_ledger.txt'
# Ledger with only cleared transactions
alias lc='ledger -C -f ~/docs/finances/ledger/my_ledger.txt'
# Show register of transactions with the 'todo' tag
alias ltodo='ledger -f ~/docs/finances/ledger/my_ledger.txt reg %todo'
# Show register of transactions with the 'owed' tag
alias lowed='ledger -f ~/docs/finances/ledger/my_ledger.txt reg %owed'
# Show register of transactions with the 'review' tag
alias lreview='ledger -f ~/docs/finances/ledger/my_ledger.txt reg %review'

# misc aliases
alias e="emacsclient -t"
alias tvim='nvim -c "colorscheme default"'
alias trans="transmission-remote"
alias hdc="ls -a ~ | wc -l"
alias logout='pkill -u'
alias vim='nvim'
alias w3md='w3m duckduckgo.com'
alias cls='clear'
alias yt='pipe-viewer'
alias ytdl='yt-dlp'
alias solitaire='ttysolitaire --no-background-color'
alias db='dropbox-cli'
alias stow='stow --no-folding'

# zapier
alias zawsmonolith='aws-vault exec monolith-production-developer'